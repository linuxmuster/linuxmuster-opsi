#! /bin/bash
#
# postrm script for linuxmuster-opsi
# thomas@linuxmuster.net
# 24.02.2014
#
# see: dh_installdeb(1)
#

set -e

case "$1" in
    remove)
	;;

    purge)
	[ -d /var/lib/linuxmuster-opsi ] && rm -rf /var/lib/linuxmuster-opsi
	[ -d /usr/share/linuxmuster-opsi ] && rm -rf /usr/share/linuxmuster-opsi
	;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
