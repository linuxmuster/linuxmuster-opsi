#!/bin/bash
# postinst script for linuxmuster-opsi
#
# thomas@linuxmuster.net
# 20180507
# GPL v3
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

. /usr/share/linuxmuster-opsi/environment

case "$1" in
  configure)
    [ -d "$DATADIR" ] || mkdir "$DATADIR"
    # repair outdated uib repo paths
    if grep -q ^"\[repository_uib\]" "$PRODCNF_TGT"; then
      path_old="opsi_stable/products/"
      path_new="opsi_stable/products/windows/"
      contribute_old=", opsi_stable/products/windows/contribute/full-package"
      if ! grep -q "$path_new" "$PRODCNF_TGT"; then
        echo "Updating uib repo paths."
        cp "$PRODCNF_TGT" "${PRODCNF_TGT}.uibrepo_old"
        backed_up="yes"
        sed -i "s|$path_old|$path_new|g" "$PRODCNF_TGT"
      fi
      if grep -q "$contribute_old" "$PRODCNF_TGT"; then
        echo "Removing obsolete uib contribute repo."
        [ -e "${PRODCNF_TGT}.uibrepo_old" ] || cp "$PRODCNF_TGT" "${PRODCNF_TGT}.uibrepo_old"
        sed -i "s|$contribute_old||g" "$PRODCNF_TGT"
      fi
    fi
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
	;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
