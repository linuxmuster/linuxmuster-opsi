#!/bin/bash
# postinst script for linuxmuster-opsi
#
# thomas@linuxmuster.net
# 20180507
# GPL v3
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

. /usr/share/linuxmuster-opsi/environment

case "$1" in
  configure)
    [ -d "$DATADIR" ] || mkdir "$DATADIR"
    # repair outdated uib repo paths
    if grep -q ^"\[repository_uib\]" "$PRODCNF_TGT"; then
      repo_new="dirs = opsi_stable/products/windows/localboot, opsi_stable/products/windows/netboot"
      if ! grep -q "$repo_new" "$PRODCNF_TGT"; then
        # package version
        update_version="1.2.1"
        if [ ! -e "${PRODCNF_TGT}_${update_version}" ]; then
          echo "Updating uib repo paths."
          cp "$PRODCNF_TGT" "${PRODCNF_TGT}_${update_version}"
          sed -i "s|^dirs = opsi_stable/.*|$repo_new|g" "$PRODCNF_TGT"
        fi
      fi
    fi
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
	;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
